@model ComapnyWebApp.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
   @* @Html.HiddenFor(x=>x.EmployeeCode) *@
    <input type="hidden" asp-for="EmployeeCode" />

    <!-- Display other properties for editing -->
    
    <div class="form-group">
        <label asp-for="FirstName">FirstName:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">LastName:</label>
        <input asp-for="LastName" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

