@model ComapnyWebApp.Models.Department

@{
    ViewData["Title"] = "Edit Department";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Edit Department</h1>

<form asp-action="EditDepartment" method="post">


    @Html.HiddenFor(x=>x.Id)
   
    <!-- Display other properties for editing -->

    <div class="form-group">
        <label asp-for="DeptName">Change Department Name:</label><br />
        <input asp-for="DeptName" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

