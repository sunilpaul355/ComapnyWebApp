@model ComapnyWebApp.Models.City

@{
    ViewData["Title"] = "Delete Cities";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Delete Cities</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Are you sure you want to delete this City?</h3>
<div>
    <h4>City details:</h4>
    <hr />
    <dl class="row">
        <dt>
            <label>City Name: </label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CityName)
        </dd>
        <dt>
            <label>State Name: </label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.States.StateName)
        </dd>
    </dl>

    <form asp-action="CDeleteCity" asp-route-id="@Model.CityId" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Department">Back to List</a>
        </div>
    </form>
</div>